<div class="section">
    <ul class="bookmarks">
        <% @bookmarks.each_with_index do |bookmark, index| %>
            <li>
                <%= link_to bookmark_path(index) do %>
                    <div><%= bookmark[:title] %></div>
                    <%= image_tag bookmark[:screenthumb] %>
                    <%= link_to edit_bookmark_path(index) do %>
                        <div>
                            <span data-icon="<%= bookmark[:public] %>" aria-hidden="true"></span>
                            Edit Bookmark
                        </div>
                    <% end %>
                <% end %>
            </li>
        <% end %>
    </ul>
    <%= link_to "New Bookmark", new_bookmark_path %>
</div>
<%= link_to "All Users", users_path %>
